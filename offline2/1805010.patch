+// Return the number of free pages in the kernel heap.
+uint64 
+kalloc_count(void)
+{
+  struct run *r;
+  uint64 count = 0;
+  acquire(&kmem.lock);
+  r = kmem.freelist;
+  while(r) {
+    count++;
+    r = r->next;
+  }
+  release(&kmem.lock);
+  return count;
+}
